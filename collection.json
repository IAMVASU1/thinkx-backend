{
  "info": {
    "name": "Smart Alumni Association API",
    "description": "Complete API collection for Alumni Association System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Alumni\",\n  \"email\": \"alumni@test.com\",\n  \"password\": \"password123\",\n  \"role\": \"ALUMNI\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"alumni@test.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Alumni",
      "item": [
        {
          "name": "Create / Update Profile",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/alumni/profile",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"graduationYear\": 2022,\n  \"degree\": \"B.Tech\",\n  \"department\": \"Computer Engineering\",\n  \"currentCompany\": \"Google\",\n  \"designation\": \"Software Engineer\",\n  \"skills\": [\"Node.js\", \"React\"]\n}"
            }
          }
        },
        {
          "name": "Alumni Directory",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/alumni/directory"
          }
        }
      ]
    },
    {
      "name": "Jobs",
      "item": [
        {
          "name": "Post Job",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/jobs",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Backend Developer\",\n  \"company\": \"Amazon\",\n  \"description\": \"Node.js Developer\",\n  \"location\": \"Remote\"\n}"
            }
          }
        },
        {
          "name": "Get Jobs",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/jobs"
          }
        }
      ]
    },
    {
      "name": "Events",
      "item": [
        {
          "name": "Create Event",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/events",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Alumni Meetup\",\n  \"date\": \"2026-05-01\",\n  \"location\": \"College Campus\"\n}"
            }
          }
        },
        {
          "name": "Get Events",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/events"
          }
        }
      ]
    },
    {
      "name": "Donations",
      "item": [
        {
          "name": "Create Donation",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/donations",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 1000,\n  \"purpose\": \"Lab Development\"\n}"
            }
          }
        },
        {
          "name": "My Donations",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/donations/my"
          }
        }
      ]
    },
    {
      "name": "Success Stories",
      "item": [
        {
          "name": "Submit Story",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/success-stories",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Startup Founder\",\n  \"story\": \"Built a successful startup\"\n}"
            }
          }
        },
        {
          "name": "Get Approved Stories",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/success-stories"
          }
        }
      ]
    },
    {
      "name": "Feedback",
      "item": [
        {
          "name": "Submit Feedback",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/feedback",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"Great platform\",\n  \"rating\": 5\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Dashboard Stats",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/admin/dashboard"
          }
        },
        {
          "name": "Approve Success Story",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/admin/success-story/{{storyId}}/approve"
          }
        }
      ]
    }
  ]
}
